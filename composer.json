{
  "name": "osa-inc/osa",
  "description": "The Laravel Framework.",
  "keywords": [
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "php": ">=7.0.0",
    "laravel/framework": "5.3.*",
    "guzzlehttp/guzzle": "~6.0",
    "phpmentors/domain-kata": "1.4.*",
    "nicolopignatelli/valueobjects": "~4.0",
    "ytake/laravel-couchbase": "^0.6",
    "ytake/laravel-aspect": "~1.5.0",
    "erusev/parsedown-extra": "^0.7.1",
    "league/glide-laravel": "^1.0.0",
    "elasticsearch/elasticsearch": "^5.0.0",
    "cakephp/chronos": "^1.0.2",
    "predis/predis": "^1.1.1"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~5.0",
    "symfony/css-selector": "3.1.*",
    "symfony/dom-crawler": "3.1.*",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "~2.7",
    "friendsofphp/php-cs-fixer": "^1.11.6",
    "whatthejeff/nyancat-phpunit-resultprinter": "~1.2",
    "phpmetrics/phpmetrics": "^1.10.0",
    "sebastian/phpcpd": "*",
    "phploc/phploc": "*",
    "pdepend/pdepend": "^2.2.4"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "Osa\\": "app/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php artisan optimize"
      "@cs"
    ],
    "md": "php ./vendor/bin/phpmd app text ./phpmd.xml",
    "quality-assurance": [
      "php artisan config:clear",
      "php ./vendor/bin/phpunit",
      "php ./vendor/bin/phpcpd app/",
      "php ./vendor/bin/pdepend  --summary-xml=tests/build/summary.xml --jdepend-chart=tests/quality-assurance/jdepend.svg --overview-pyramid=tests/quality-assurance/pyramid.svg app/",
      "php ./vendor/bin/phploc app --log-xml=tests/quality-assurance/phploc.xml"
    ],
    "cs": "php ./vendor/bin/php-cs-fixer fix",
    "phpcs": "./vendor/bin/phpcs app/ --report-full --report-source --standard=PSR2 --colors"
  },
  "config": {
    "preferred-install": "dist"
  }
}
